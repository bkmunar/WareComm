<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bmunar.warecomm.DeparmentList">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departmentListImage"
        android:layout_gravity="center"/>
    <Button
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:text="appliances"
        android:onClick="selectDepartment"
        android:id="@+id/Appliances"/>
    <Button
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:text="bath"
        android:onClick="selectDepartment"
        android:id="@+id/Bath"/>
    <Button
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:text="electrical"
        android:onClick="selectDepartment"
        android:id="@+id/Electrical"/>
    <Button
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:text="flooring"
        android:onClick="selectDepartment"
        android:id="@+id/Flooring"/>
</FrameLayout>
